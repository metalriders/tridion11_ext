{  
  "name": "HP Link tool",
  "short_name": "HP Link tool",
  "description": "This tool will help web editors to ease check/report of webpages from HP",
  "version": "1.0",

  "permissions": [
    "webNavigation",
    "webRequest",
    "notifications",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "tridion_ext.js"
  ],
