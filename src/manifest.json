{  
  "name": "Tridion11 extension",
  "short_name": "trid11_ext",
  "description": "This tool will help web editors to ease usage of tridion 2011",
  "version": "0.0.3",

  "permissions": [
    "webNavigation",
    "webRequest",
    "notifications",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "options_page": "polymer/index.html",

  "web_accessible_resources": [
    "js/tridion_ext.js"
  ],
  
  "background": {
    "scripts": [ "js/background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "images/icon.ico",
    "default_title": "This icon does nothing !"
  },

  "manifest_version": 2
}