{  
  "name": "Tridion11 extension",
  "short_name": "trid11_ext",
  "description": "This tool will help web editors to ease usage of tridion 2011",
  "version": "0.0.2",

  "permissions": [
    "webNavigation",
    "webRequest",
    "notifications",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "web_accessible_resources": [
    "tridion_ext.js"
  ],
  
  "background": {
    "scripts": [ "background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "icon.ico",
    "default_title": "Hello !"
  },

  "manifest_version": 2
}