{  
  "name": "Tridion11 extension",
  "short_name": "trid11_ext",
  "description": "This tool will help web editors to ease usage of tridion 2011",
  "version": "0.0.3",

  "permissions": [
    "webNavigation",
    "webRequest",
    "storage",
    "notifications",
    "activeTab",
    "tabs",
    "<all_urls>"
  ],

  "commands":{
    "_execute_page_action":{
      "suggested_key":{
        "default": "Alt+T"
      },
      "description":"This tool will help web editors to ease usage of tridion 2011",
      "global": true
    }
  },

  "options_page": "options.html",

  "content_scripts":[
    {
      "matches":["*://*/*"],
      "css": ["css/helpers.css"],
      "js":["js/sup_publishing.js"]
    },
    {
      "matches":["*://*/*"],
      "js":["js/popup.js"]
    }
  ],

  "web_accessible_resources": [
    "js/tridion_ext.js"
  ],
  
  "background": {
    "scripts": [ "js/background.js"],
    "persistent": true
  },

  "browser_action": {
    "default_icon": "images/icon.ico",
    "default_title": "This icon does nothing !"
  },

  "manifest_version": 2
}